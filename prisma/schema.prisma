generator client {
  provider = "prisma-client-js"
}

generator nestgraphql {
  provider = "node node_modules/prisma-nestjs-graphql"
  output   = "../src/@generated/prisma-nestjs-graphql"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model accounts {
  id         BigInt       @id @default(autoincrement())
  uid        String       @db.Text
  name       String       @db.Text
  bio        String?      @db.Text
  categories categories[]
}

model categories {
  id         BigInt   @id @default(autoincrement())
  account_id BigInt
  content    String?  @db.Text
  accounts   accounts @relation(fields: [account_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_categories_accounts")

  @@index([account_id], map: "FK_categories_accounts")
}

model tweets {
  id      BigInt  @id @default(autoincrement())
  uid     BigInt
  content String? @db.Text
}
